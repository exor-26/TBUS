<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TBUS" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorBackgroundNight</item>
        <item name="colorBackground">@color/colorBackgroundNight</item>
        <item name="colorOnBackground">@color/colorOnBackgroundNight</item>

        <!-- Status bar settings for night mode -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorControlNormal">@color/iconDefault</item> <!-- Default color -->
        <item name="colorControlActivated">@color/iconPressed</item> <!-- Active/Pressed state -->
        <item name="colorControlHighlight">@color/iconPressed</item>
    </style>

    <style name="Theme.TBUS" parent="Base.Theme.TBUS" />
</resources>
